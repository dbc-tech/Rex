{
  "name": "@dbc-tech/rex",
  "version": "1.0.0",
  "description": "A Node.js HTTP client package for Rex CRM",
  "repository": "https://github.com/dbc-tech/Rex",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "rimraf --glob ./**/dist && rimraf --glob ./**/.turbo && rimraf --glob ./**/node_modules",
    "install:clean": "yarn clean && yarn install",
    "refresh": "yarn install:clean && yarn build && yarn lint"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "eslint": "^8.41.0",
    "eslint-config-custom": "*",
    "eslint-plugin-turbo": "^0.0.3",
    "jest": "^29.5.0",
    "jest-extended": "^4.0.0",
    "prettier": "^2.8.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "turbo": "^1.10.7",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
